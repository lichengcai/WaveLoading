<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="paintColor" format="color"/>
    <attr name="speed" format="float"/>
    <attr name="bgBitmap" format="reference"/>

    <declare-styleable name="WaveLoadingView">
        <attr name="paintColor"/>
        <attr name="speed"/>
        <attr name="bgBitmap"/>
    </declare-styleable>

    <declare-styleable name="SplashView">
        <attr name="splash_text" format="string"/>
        <attr name="splash_size" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="ParticleView">
        <attr name="pv_host_text" format="string"/>
        <attr name="pv_particle_text" format="string"/>
        <attr name="pv_particle_text_size" format="dimension"/>
        <attr name="pv_text_color" format="color"/>
        <attr name="pv_background_color" format="color"/>
    </declare-styleable>
</resources>